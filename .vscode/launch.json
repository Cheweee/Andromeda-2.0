{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Andromeda (chrome + api)",
            "configurations": [
                "Andromeda (chrome)",
                "Andromeda (api)"
            ]
        },
    ],
    "configurations": [        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Andromeda (chrome)",
            "url": "http://localhost:8080",
            "breakOnLoad": false,
            "sourceMaps": true,
        },
        {
            "name": "Andromeda (api)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": ["api"],
            "cwd": "${workspaceRoot}/Andromeda.API",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
            },
            "justMyCode": false,
            "suppressJITOptimizations": true,
        },
        {
            "name": "Andromeda (create database)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "create"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (drop database)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "drop"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (reset database)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "reset"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (reset azure database)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "reset --database-host tcp:andromeda20.database.windows.net --database-port 1433 --database-name andromeda --database-user-name chewee --database-password Futureisnear1 --database-provider 0"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (app settings)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "app-settings --database-host localhost\/sqlexpress --database-name andromeda --database-user-name sa --database-password qwerty_123 --database-provider 0"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (migrate up database)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "migrate-up"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (migrate down database)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "migrate-down"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Andromeda (utility help)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Andromeda.API/bin/Debug/netcoreapp2.2/Andromeda.API.dll",
            "args": [
                "--help"
            ],
            "cwd": "${workspaceFolder}/Andromeda.API",
            "console": "internalConsole",
            "stopAtEntry": false
        }
    ]
}